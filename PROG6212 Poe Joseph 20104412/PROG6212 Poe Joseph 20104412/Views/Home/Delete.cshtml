<div>
    <h4>Modules</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ModuleName)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Class_Hours_per_week)
