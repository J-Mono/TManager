@model IEnumerable<PROG6212_Poe_Joseph_20104412.Models.StudyHours>

@{
    ViewBag.Title = "StudyHours";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>StudyHours</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hoursStudied)
        </th>
        <th></th>
    </tr>

