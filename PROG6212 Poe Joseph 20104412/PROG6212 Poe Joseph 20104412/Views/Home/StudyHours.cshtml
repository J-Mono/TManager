    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.study_hours_required)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoursStudied)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemainingStudyHours)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SH_ID }) |
